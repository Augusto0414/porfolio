---
import HeaderAside from "./HeaderAside.astro";
import "../styles/global.css";
import Experience from "./Experience.astro";
import Tecnologies from "./Tecnologies.astro";
import Projects from "./Projects.astro";
---

<!-- Modern Portfolio Layout -->
<div class="min-h-screen w-full bg-[#0a0a0a]">
  <!-- Hero Section -->
  <section class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12 py-16 sm:py-20 lg:py-28">
    <HeaderAside />
    <div class="mt-10 sm:mt-14">
      <p class="text-lg sm:text-xl text-gray-400 leading-relaxed max-w-3xl">
        Desarrollador Full Stack con experiencia en aplicaciones web y móviles, desde interfaces modernas hasta
        APIs escalables. Manejo de tecnologías como React, Flutter, Node.js, Java y Python.
      </p>
    </div>
  </section>

  <!-- Divider -->
  <div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="h-px bg-gradient-to-r from-transparent via-gray-700/50 to-transparent"></div>
  </div>

  <!-- Technologies Section -->
  <section class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12 py-20 sm:py-24">
    <Tecnologies />
  </section>

  <!-- Divider -->
  <div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="h-px bg-gradient-to-r from-transparent via-gray-700/50 to-transparent"></div>
  </div>

  <!-- Experience Section -->
  <section class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12 py-20 sm:py-24">
    <Experience />
  </section>

  <!-- Divider -->
  <div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="h-px bg-gradient-to-r from-transparent via-gray-700/50 to-transparent"></div>
  </div>

  <!-- Projects Section -->
  <section class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12 py-20 sm:py-24 pb-32">
    <Projects />
  </section>

  <!-- Footer Spacing -->
  <div class="h-20"></div>
</div>

<style>
  .tech-icon-bento {
    background-color: rgba(31, 41, 55, 0.5);
    padding: 0.5rem;
    border-radius: 0.75rem;
    border: 1px solid rgba(55, 65, 81, 0.3);
  }
</style>
